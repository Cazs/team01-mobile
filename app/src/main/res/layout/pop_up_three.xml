<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        >

        <TextView
            android:id="@+id/UnsuccessfulMatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unsuccessful Match"
            android:textColor="@color/iceblue"
            android:textSize="20pt"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_size_10"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_size_50"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/dp_size_130"
                android:layout_height="@dimen/dp_size_130"
                android:layout_marginTop="@dimen/dp_size_60"
                android:layout_marginLeft="@dimen/dp_size_10"
                android:layout_centerHorizontal="true"
                android:id="@+id/other_pic3"
                />


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/dp_size_130"
                android:layout_height="@dimen/dp_size_130"
                android:layout_marginTop="@dimen/dp_size_60"
                android:layout_marginLeft="@dimen/dp_size_20"
                android:layout_centerHorizontal="true"
                android:id="@+id/other_pic4"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/phrase2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't worry, there's plenty of fish in the sea, there is still Ice to be broken!"
            android:textColor="@color/black"
            android:textSize="12pt"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/dp_size_300"
            />


        <Button
            android:id="@+id/popup1_Start_Chatting"
            android:layout_marginTop="@dimen/dp_size_420"
            android:layout_marginLeft="@dimen/dp_size_50"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:fontFamily="monospace"
            android:textSize="10pt"
            android:text="Keep Playing"
            android:background="@drawable/icebreak_button"
            />



    </RelativeLayout>

</RelativeLayout>