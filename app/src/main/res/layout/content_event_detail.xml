<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/app_bar_bmargin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".screens.EventDetailActivity"
    tools:showIn="@layout/activity_event_detail">

    <ScrollView
        android:id="@+id/sv_detail_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/event_image"
                android:layout_width="@dimen/dp_size_200"
                android:layout_height="@dimen/dp_size_200"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/event_name"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18pt"
                android:fontFamily="monospace"
                android:layout_below="@+id/event_image"
                android:text="Event Name"
                android:layout_centerInParent="true"
                android:gravity="center"/>

            <TextView
                android:id="@+id/event_description"
                android:fontFamily="monospace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10pt"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="Event Description"
                android:layout_below="@+id/event_name"
                android:gravity="center"/>

            <TextView
                android:id="@+id/event_start_date_lbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:textSize="8pt"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:text="Starts on:"
                android:layout_below="@+id/event_description"
                android:gravity="center"/>

            <TextView
                android:id="@+id/event_start_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:textSize="8pt"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="---"
                android:layout_below="@+id/event_start_date_lbl"
                android:gravity="center"/>

            <TextView
                android:id="@+id/event_end_date_lbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:textSize="8pt"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="Ends on:"
                android:layout_below="@+id/event_start_date"
                android:gravity="center"/>

            <TextView
                android:id="@+id/event_end_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:textSize="8pt"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="---"
                android:layout_below="@+id/event_end_date_lbl"
                android:gravity="center"/>

            <TextView
                android:id="@+id/event_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:textSize="8pt"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_below="@+id/event_end_date"
                android:layout_marginTop="10dp"
                android:text="Address:"
                android:gravity="center"/>

            <TextView
                android:id="@+id/event_user_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:textSize="8pt"
                android:layout_below="@+id/event_address"
                android:layout_marginTop="10dp"
                android:text="Users logged in: "
                android:gravity="center"/>

            <EditText
                android:id="@+id/AccessCode"
                android:layout_width="@dimen/dp_size_200"
                android:layout_height="@dimen/dp_size_40"
                android:hint="Access Code"
                android:layout_below="@+id/event_user_count"
                android:layout_marginTop="10dp"
                android:inputType="number"
                android:fontFamily="monospace"
                android:background="@drawable/textbox"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"/>

            <LinearLayout
                android:id="@+id/qr_loc_btn_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_below="@+id/AccessCode">

                <Button
                    android:id="@+id/btnQr"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/qr_code_scanner_btn_bg"
                    android:onClick="startQRscanner"
                    android:layout_centerHorizontal="true"/>

                <Button
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/ic_gps_fixed_black_24dp"
                    android:onClick="viewPosition"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="15dp"/>

            </LinearLayout>

            <!--<Button
                android:id="@+id/btnShowTimeline"
                android:layout_width="180dp"
                android:fontFamily="monospace"
                android:layout_height="50dp"
                android:onClick="showTimeline"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/qr_loc_btn_container"
                android:layout_marginTop="15dp"
                android:text="Events story"
                android:background="@drawable/icebreak_button"/>-->

        <LinearLayout
            android:id="@+id/dragView"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#dbdbdb"
            android:clickable="true"
            android:focusable="false"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_below="@+id/qr_loc_btn_container">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/imageTimeline"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                app:layoutManager="LinearLayoutManager"
                tools:context=".screens.EventDetailActivity"
                tools:listitem="@layout/timeline_item"/>
        </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
