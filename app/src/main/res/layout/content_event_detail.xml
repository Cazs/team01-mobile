<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".screens.EventDetailActivity"
    tools:showIn="@layout/activity_event_detail">

<ViewFlipper
    android:id="@+id/viewFlipper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true">
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/event_image"
                android:layout_width="@dimen/dp_size_200"
                android:layout_height="@dimen/dp_size_200"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/event_name"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18pt"
                android:fontFamily="monospace"
                android:layout_below="@+id/event_image"
                android:text="Event Name"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/event_description"
                android:fontFamily="monospace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8pt"
                android:text="Event Description"
                android:layout_below="@+id/event_name"
                android:layout_centerHorizontal="true"/>

            <EditText
                android:id="@+id/AccessCode"
                android:layout_width="@dimen/dp_size_200"
                android:layout_height="@dimen/dp_size_40"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:hint="Access Code"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/event_description"
                android:inputType="number"
                android:fontFamily="monospace"
                android:background="@drawable/textbox"/>

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/qr_code_scanner_btn_bg"
                android:layout_below="@+id/AccessCode"
                android:onClick="startQRscanner"
                android:layout_centerHorizontal="true"/>

            </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <android.support.v7.widget.RecyclerView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/users_at_event_list"
            android:name="com.codcodes.icebreaker.tabs.dummy.UserContactsFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            app:layoutManager="LinearLayoutManager"
            tools:context=".tabs.UserContactsFragment"
            tools:listitem="@layout/fragment_usercontact" />

    </LinearLayout>
</ViewFlipper>



</RelativeLayout>
