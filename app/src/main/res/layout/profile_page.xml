<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/profile_gradient"
            >

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20pt"
                android:layout_marginLeft="74dp"
                android:layout_marginTop="30dp"
                />


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="70dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/seleena"
                android:id="@+id/circleview"
                />

            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="230dp"
                android:layout_marginTop="210dp"
                android:background="@color/iceblue"
                android:src="@drawable/ic_mode_edit_white_24dp"
                app:fabSize="mini"
                android:id="@+id/Edit"
                />

            <TextView
                android:id="@+id/profile_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="12pt"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="275dp"
                />

            <TextView
                android:id="@+id/profile_occupation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="10pt"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="300dp"
                android:maxLines="1"
                android:maxLength="30"
                android:ellipsize="end"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/rewards_icon"
                    android:src="@drawable/ic_grade_white_24dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="360dp"

                    />
                <TextView
                    android:id="@+id/profile_Rewards"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/iceblue"
                    android:textSize="14pt"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="355dp"

                    />

                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:background="@color/iceblue"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="355dp"
                    >

                </View>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/setting_icon"
                    android:src="@drawable/ic_settings_white_24dp"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="360dp"

                    />
                <TextView
                    android:id="@+id/profile_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/iceblue"
                    android:textSize="14pt"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="355dp"
                    android:textColorHint="@color/red"
                    />

            </LinearLayout>
        </RelativeLayout>











</RelativeLayout>