<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/appbar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:clickable="true"
    android:focusable="false"
    tools:context="com.codcodes.icebreaker.screens.RewardsAchievementsActivity">

    <LinearLayout
        android:id="@+id/big_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/iceblue"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/actionBar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_bar_h"
            android:background="@android:color/transparent"
            android:orientation="horizontal"
            android:weightSum="100">

            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="0dp"
                android:layout_height="@dimen/logo_h"
                android:layout_weight="20"
                android:layout_gravity="center"
                android:src="@mipmap/ic_launcher"
                android:visibility="invisible"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="80"
                android:background="@android:color/transparent">

                <TextView
                    android:id="@+id/main_heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Achievements"
                    android:textSize="34sp"
                    android:textColor="@color/white"
                    android:maxLines="2"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/rewards_user_pic_w"
                android:layout_height="@dimen/rewards_user_pic_h"
                android:layout_gravity="center">

                <ProgressBar
                    android:id="@+id/pb_img_load"
                    android:layout_width="@dimen/rewards_user_pic_w"
                    android:layout_height="@dimen/rewards_user_pic_h"
                    android:indeterminate="true"
                    android:layout_gravity="center"
                    android:visibility="visible"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgProfilePic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Anonymous"
                    android:textSize="34sp"
                    android:textColor="@color/white"
                    android:maxLines="1"/>

                <TextView
                    android:id="@+id/txtPoints"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Points: 0"
                    android:textSize="34sp"
                    android:textColor="@color/white"
                    android:maxLines="1"/>

            </LinearLayout>

        </LinearLayout>

        <android.support.design.widget.TabLayout
            android:id="@+id/rew_ach_tabs"
            style="@style/MyCustomTabLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/iceblue" />

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/rew_ach_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/big_app_bar"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

</RelativeLayout>
