<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_marginTop="@dimen/app_bar_bmargin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".screens.OtherUserProfileActivity"
    tools:showIn="@layout/activity_other_profile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarFadeDuration="@android:integer/config_shortAnimTime">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/other_profile_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="20pt"
                android:layout_marginTop="@dimen/dp_size_10" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/other_pic"
                    android:layout_width="@dimen/dp_size_200"
                    android:layout_height="@dimen/dp_size_200"
                    android:layout_marginTop="@dimen/dp_size_20"/>

                <ProgressBar
                    android:id="@+id/pb_other_pic"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:visibility="visible"
                    android:indeterminate="true"/>

            </FrameLayout>

            <TextView
                android:id="@+id/other_profile_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="12pt"

                />

            <TextView
                android:id="@+id/other_profile_occupation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="10pt"
                android:maxLines="1"
                android:maxLength="30"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/other_profile_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="10pt"
                android:maxLines="1"
                android:maxLength="20"
                />

            <TextView
                android:id="@+id/other_profile_bio_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/dp_size_5dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="12pt"
                />

            <TextView
                android:id="@+id/other_profile_bio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="10pt"
                android:layout_centerHorizontal="true"
                android:maxLength="150"
                />

            <Button
                android:id="@+id/icebreak"
                android:gravity="center"
                android:layout_width="200dp"
                android:layout_height="50dip"
                android:fontFamily="monospace"
                android:layout_gravity="center"
                android:textSize="12pt"
                android:layout_marginTop="@dimen/dp_size_20dp"
                android:text="ICEBREAK"
                android:background="@drawable/icebreak_button" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
