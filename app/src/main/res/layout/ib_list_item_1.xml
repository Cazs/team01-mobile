<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/contact_list_item_height"
    android:orientation="horizontal"
    android:weightSum="100"
    android:background="@drawable/list_divider">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="25"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="1dp">

        <ProgressBar
            android:id="@+id/pb_img_load"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:indeterminate="true"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/contactProfileImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="75"
        android:orientation="vertical"
        android:layout_gravity="center">


        <TextView
            android:id="@+id/contactName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/contact_name_text_size"
            android:fontFamily="monospace"
            android:padding="2dp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/contactBio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            android:textSize="@dimen/contact_bio_text_size"
            android:fontFamily="monospace"
            android:layout_marginLeft="10dp"
            android:maxLines="2"
            android:maxLength="40"
            android:paddingTop="@dimen/contact_bio_tpadding"
            android:textAppearance="?attr/textAppearanceListItem" />
    </LinearLayout>
</LinearLayout>
