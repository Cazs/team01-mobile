<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <TextView
            android:id="@+id/SuccessfulMatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Successful Match"
            android:textColor="@color/iceblue"
            android:textSize="20pt"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_size_10" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_size_50">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/dp_size_130"
                android:layout_height="@dimen/dp_size_130"
                android:layout_marginTop="@dimen/dp_size_60"
                android:layout_marginLeft="@dimen/dp_size_10"
                android:layout_centerHorizontal="true"
                android:id="@+id/other_pic1"
                />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/dp_size_130"
                android:layout_height="@dimen/dp_size_130"
                android:layout_marginTop="@dimen/dp_size_60"
                android:layout_marginLeft="@dimen/dp_size_20"
                android:layout_centerHorizontal="true"
                android:id="@+id/other_pic2"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/phrase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What are you waiting for!"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="12pt"
            android:layout_marginTop="@dimen/dp_size_280" />

        <RadioButton
            android:layout_width="@dimen/dp_size_300"
            android:layout_height="30dp"
            android:id="@+id/popup1_Start_Chatting"
            android:layout_marginTop="@dimen/dp_size_350"
            android:layout_marginLeft="@dimen/dp_size_50"
            android:text="Meet at the bar"
            android:fontFamily="monospace"
            android:textSize="10pt"
            android:layout_centerHorizontal="true"
            android:background="@drawable/buttonshape"
            />
        <TextView
            android:id="@+id/or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OR"
            android:textColor="@color/black"
            android:textSize="8pt"
            android:layout_marginLeft="@dimen/dp_size_140"
            android:layout_marginTop="390dp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            />
        <RadioButton
            android:layout_width="@dimen/dp_size_300"
            android:layout_height="30dp"
            android:layout_marginTop="@dimen/dp_size_420"
            android:layout_marginLeft="@dimen/dp_size_50"
            android:text="Meet at the Entrance"
            android:fontFamily="monospace"
            android:textSize="10pt"
            android:layout_centerHorizontal="true"
            android:background="@drawable/buttonshape"
            />
        <TextView
            android:id="@+id/or2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OR"
            android:textColor="@color/black"
            android:textSize="8pt"
            android:layout_marginLeft="@dimen/dp_size_140"
            android:layout_marginTop="460dp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            />

        <Button
            android:id="@+id/popup1_Keep_playing"
            android:layout_marginTop="@dimen/dp_size_500"
            android:layout_marginLeft="@dimen/dp_size_50"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:fontFamily="monospace"
            android:textSize="10pt"
            android:layout_centerHorizontal="true"
            android:text="Keep Playing"
            android:background="@drawable/buttonshape" />

    </RelativeLayout>
</RelativeLayout>