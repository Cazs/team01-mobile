<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.codcodes.icebreaker.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_layout">

        <ImageView
            android:layout_width="@dimen/icon_width"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_icon"
            android:layout_marginLeft="@dimen/icon_left"
            android:src="@mipmap/ic_launcher"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_text"
            android:text="@string/app_name"
            android:paddingLeft="@dimen/title_padding"
            android:id="@+id/LogIn"
            android:textSize="29pt"
            android:textColor="@color/white"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/text_box_size"
        android:gravity="center_horizontal"
        >
        <EditText
            android:id="@+id/username_login"
            android:layout_width="@dimen/text_box_size"
            android:layout_height="wrap_content"
            android:hint="@string/reg_username"
            android:typeface="monospace"
            android:inputType="text"
            />
        <EditText
            android:id="@+id/password_login"
            android:layout_width="@dimen/text_box_size"
            android:layout_height="wrap_content"
            android:hint="@string/reg_password"
            android:typeface="monospace"
            android:inputType="textPassword"
            />

        <Button
            android:layout_width="@dimen/text_box_size"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="15dp"
            android:layout_marginTop="23dp"
            android:background="@drawable/buttonshape"
            android:text="LOGIN"
            android:fontFamily="monospace"
            />
        </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
