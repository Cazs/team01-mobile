<?xml version="1.0" encoding="utf-8"?>
    <android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".screens.InitialActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            android:id="@+id/actionBar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="-5dp"
            android:layout_weight="11"
            android:background="@drawable/action_bar_background">

            <ImageView
                android:layout_width="@dimen/logo_w"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/main_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/app_name"
                android:textSize="29pt"
                android:textColor="@color/white" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="75">

            <android.support.v4.view.ViewPager
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:orientation="horizontal"
                android:layout_alignBottom="@+id/container"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:background="@android:color/transparent">

                <View
                    android:id="@+id/page1"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/init_nav_dot_filled" />

                <View
                    android:id="@+id/page2"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/init_nav_dot"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp" />

                <View
                    android:id="@+id/page3"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/init_nav_dot" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="14"
            android:background="@color/iceblue"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/init_btn_login_marg"
                    android:textColor="#000"
                    android:textSize="@dimen/dp_size_15"
                    android:background="@drawable/buttonshape"
                    android:text="Login"
                    android:onClick="showLogin"
                    android:fontFamily="monospace" />

                <View
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_gravity="center"
                    android:background="@drawable/init_bbar_divider_shape"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/init_btn_login_marg"
                    android:textColor="#000"
                    android:textSize="@dimen/dp_size_15"
                    android:shadowRadius="5"
                    android:background="@drawable/buttonshape"
                    android:text="Sign Up"
                    android:fontFamily="monospace"
                    android:onClick="ShowSignUp" />

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>
