<?xml version="1.0" encoding="utf-8"?>
    <android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".screens.InitialActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="12"
            android:paddingTop="@dimen/appbar_padding_top"
            android:theme="@style/AppTheme.AppBarOverlay">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/dp_size_50"
                    android:layout_marginTop="@dimen/dp_size_2"
                    android:layout_marginLeft="@dimen/dp_size_20"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_launcher"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:id="@+id/heading"
                    android:textSize="29pt"
                    android:textColor="@color/white"
                    />

            </LinearLayout>
        </android.support.design.widget.AppBarLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="74"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="15dp"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <View
                android:id="@+id/page1"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/init_nav_dot_filled" />

            <View
                android:id="@+id/page2"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/init_nav_dot"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp" />

            <View
                android:id="@+id/page3"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/init_nav_dot" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="12"
            android:background="@color/iceblue"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/init_btn_login_rmarg"
                    android:textColor="#000"
                    android:textSize="@dimen/dp_size_15"
                    android:background="@drawable/buttonshape"
                    android:text="Login"
                    android:onClick="showLogin"
                    android:fontFamily="monospace" />

                <View
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_gravity="center"
                    android:background="@drawable/init_bbar_divider_shape"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/init_btn_login_lmarg"
                    android:textColor="#000"
                    android:textSize="@dimen/dp_size_15"
                    android:shadowRadius="5"
                    android:background="@drawable/buttonshape"
                    android:text="Sign Up"
                    android:fontFamily="monospace"
                    android:onClick="ShowSignUp"
                    />

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>
