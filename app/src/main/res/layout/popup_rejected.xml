<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/transparent">

        <TextView
            android:id="@+id/ib_res_unsuccess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Unsuccessful Match"
            android:textColor="@color/iceblue"
            android:textSize="20pt"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_size_10" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ib_res_local_usr_image"
                android:layout_width="@dimen/dp_size_130"
                android:layout_height="@dimen/dp_size_130"
                android:layout_marginTop="@dimen/dp_size_60"
                android:layout_marginLeft="@dimen/dp_size_10"
                android:layout_centerHorizontal="true" />


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ib_res_remote_usr_image"
                android:layout_width="@dimen/dp_size_130"
                android:layout_height="@dimen/dp_size_130"
                android:layout_marginTop="@dimen/dp_size_60"
                android:layout_marginLeft="@dimen/dp_size_20"
                android:layout_centerHorizontal="true"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_motivational_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't worry, there's plenty of fish in the sea, there is still Ice to be broken!"
            android:textColor="@color/black"
            android:textSize="12pt"
            android:textAlignment="center" />

        <Button
            android:id="@+id/ib_res_btn_continue"
            android:layout_width="@dimen/ib_popup_btn_w"
            android:layout_height="@dimen/ib_popup_btn_h"
            android:layout_marginTop="@dimen/dp_size_20dp"
            android:fontFamily="monospace"
            android:gravity="center"
            android:textSize="10pt"
            android:text="Keep Playing"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="@dimen/dp_size_100"
            android:background="@drawable/icebreak_button" />

    </LinearLayout>
</LinearLayout>